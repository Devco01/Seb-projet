{
  "name": "facture-peintre",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "next build",
    "start": "next start -p 3001",
    "lint": "next lint",
    "setup": "npx prisma generate && npx prisma db push",
    "seed": "node --experimental-modules prisma/seed.mjs",
    "reset-db": "npx prisma migrate reset --force",
    "check-db": "node prisma-check.js",
    "setup-db": "node prisma-setup.js",
    "prepare-deploy": "node deploy-setup.js",
    "clean": "rm -rf .next node_modules .vercel",
    "postinstall": "npx prisma generate",
    "create-placeholder": "node create-placeholder-img.js",
    "vercel-build": "NODE_OPTIONS=\"--max-old-space-size=1536\" npx prisma generate && next build",
    "init-db": "node scripts/init-db.js"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.0",
    "@hookform/resolvers": "^4.1.3",
    "@prisma/client": "^6.5.0",
    "@tailwindcss/forms": "^0.5.10",
    "@types/bcryptjs": "^2.4.6",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "@vercel/postgres": "^0.10.0",
    "autoprefixer": "^10.4.21",
    "bcryptjs": "^3.0.2",
    "cssnano": "^7.0.6",
    "dotenv-cli": "^8.0.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "next": "^15.2.3",
    "next-auth": "^4.24.11",
    "postcss": "^8.5.3",
    "postcss-import": "^16.1.0",
    "prisma": "^6.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.54.2",
    "react-hot-toast": "^2.5.2",
    "react-icons": "^4.10.1",
    "tailwindcss": "^3.4.17",
    "uuid": "^11.1.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "eslint": "^9",
    "eslint-config-next": "15.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
